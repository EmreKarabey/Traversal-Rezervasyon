@model DTOs.ContentDTOs.SendContentDTOs
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UILayout.cshtml";
}

<body>
    


<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">İletişim </h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="#url">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rotalar </li>
            </ul>
        </div>
    </div>
</section>


<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>İletişim Bilgilerimiz</h5>
                            <p class="mt-3 mb-4">
                              Merhaba sevgili gezgin, bize 7 gün 24 saat whatsapp,mail,mesaj gibi iletişim ağlarımız üzerinden ulaşabilirsiniz.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Mail:</h6>
                            <p>
                                <a href="mailto:mail@traversal.com">
                                    tarversalrezervasyon@gmail.com
                                </a>
                            </p>
                            <h6 class="mt-4">Ofisimize Gelin:</h6>
                            <p> İstanbul-Kadıköy</p>
                            <h6 class="mt-4">Contact:</h6>
                            <p class="margin-top"><a href="tel:+44-255-366-88">+44-255-366-88</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form method="post"  class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" asp-for="Name" placeholder="Ad" class="contact-input" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" asp-for="Mail"  placeholder="Mail" class="contact-input" required="" />
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Subject"  placeholder="Konu" class="contact-input" />
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="MessageDetail" placeholder="Mesajınız" required=""></textarea>
                                <span asp-validation-for="MessageDetail" class="text-danger"></span>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Mesaj Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
    
        </div>
	</section>
</body>