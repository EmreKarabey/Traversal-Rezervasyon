@model Traversal_Rezervasyon.Models.ResetPasswordModel
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />

    <h2>Şifre Yenileme Sayfası</h2>

    <form method="post">
        <label>Yeni Şifrenizi Giriniz</label>
        <input type="text" class="form-control" asp-for="NewPassword" />
        <span  class="text-danger" asp-validation-for="NewPassword" ></span>
        <br />
        <label>Yeni Şifrenizi Giriniz</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        <br />
        <button class="btn btn-primary">Şifre Yenileme Linki Gönder</button>
    </form>
</div>

