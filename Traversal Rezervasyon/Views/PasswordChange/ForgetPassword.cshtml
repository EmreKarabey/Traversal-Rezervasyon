@model Traversal_Rezervasyon.Models.ForgetPasswordModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />

    <h2>Şifre Yenileme Sayfası</h2>

    <form method="post">
        <label>Mail Adresinizi Giriniz</label>
        <input type="text" class="form-control" asp-for="Mail" />
