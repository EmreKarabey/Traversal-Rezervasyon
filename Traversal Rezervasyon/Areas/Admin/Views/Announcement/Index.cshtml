@model List<DTOs.AnnouncementDTOs.AnnouncementListDTO>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminUILayout.cshtml";

}


<div class="card">
	<h5 class="card-header">Yorumlar Listesi</h5>
	<div class="card-body">
		<div class="table-responsive text-nowrap">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>Başlık</th>
						<th>İçerik</th>
						<th>Detaylar</th>
						<th>Sil</th>
						<th>Güncelle</th>

					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						
						<tr>
							<td>@item.AnnouncementID</td>
							<td>@item.Title</td>
							<td>@item.Content</td>
							<td><a href="#" class="btn btn-outline-primary">Detaylar</a></td>
							<td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-outline-primary">Güncelle</a></td>
					
						</tr>
					}
				</tbody>

			</table>
			<br />
		<a href="/Admin/Announcement/AddAnnouncement" class="btn btn-outline-warning">Duyuru Ekle</a>
		</div>
	</div>
</div>
