@model DTOs.AnnouncementDTOs.AnnouncementAddDTO
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Ekle</h4>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="exampleInputPassword4">Başlık</label>
                    <input type="text" asp-for="@Model.Title" class="form-control" placeholder="Başlık">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">İçerik</label>
                    <input type="text" asp-for="@Model.Content" class="form-control" placeholder="İçerik">
                    <span class="text-danger" asp-validation-for="Content"></span>
                </div>
           
                <br />
                <button onclick="Success()" type="submit" class="btn btn-primary mr-2">Gönder</button>
                <button class="btn btn-light">İptal</button>
            </form>

        </div>
    </div>
</div>


@if (TempData["Success"] != null && (bool)TempData["Success"])
    {
    <script>
            function Success()
            {
                alert('Başarılı Bir Şekilde Duyuru Eklenildi')
        }
    </script>
    }
   

