@model VisitorModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Tur Ekleme Sayfası</h4>
			<form class="forms-sample" method="post">

				<div class="form-group">
					<label for="exampleInputPassword4">Ad</label>
					<input type="text" asp-for="Name" class="form-control" placeholder="Ad">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Soyad</label>
					<input type="text" asp-for="Surname" class="form-control" placeholder="Soyad">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Mail</label>
					<input type="email" asp-for="Mail" class="form-control" placeholder="Mail">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Şehir</label>
					<input type="text" asp-for="City" class="form-control" placeholder="Şehir">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Ülke</label>
					<input type="text" asp-for="Country" class="form-control" placeholder="Ülke">
				</div>
				
				<button type="submit" class="btn btn-primary mr-2">Ekle</button>
				<button class="btn btn-light">İptal</button>
			</form>
		</div>
	</div>
</div>

