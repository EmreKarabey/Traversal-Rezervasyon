@model List< VisitorModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminUILayout.cshtml";
	int count = 0;
}

<div class="card">
	<h5 class="card-header">Yorumlar Listesi</h5>
	<div class="card-body">
		<div class="table-responsive text-nowrap">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>İsim</th>
						<th>Soyisim</th>
						<th>Mail</th>
						<th>Şehir</th>
						<th>Ülke</th>
						<th>Sil</th>
						<th>Güncelle</th>

					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td>@count</td>
							<td>@item.Name</td>
							<td>@item.Surname</td>
							<td>@item.Mail</td>
							<td>@item.City</td>
							<td>@item.Country</td>
							<td><a href="/Admin/Visitor/DeleteVisitor/@item.VisitorID/" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/Visitor/GetIdUpdate/@item.VisitorID" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}
				</tbody>

			</table>
			<br />
			
		</div>
	</div>
</div>

