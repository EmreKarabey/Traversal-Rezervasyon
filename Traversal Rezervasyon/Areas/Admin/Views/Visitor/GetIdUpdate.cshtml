@model	VisitorModel
@{
    ViewData["Title"] = "GetIdUpdate";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Tur Ekleme Sayfası</h4>
			<form class="forms-sample" method="post">
				<input type="hidden" class="form-control" asp-for="VisitorID" />
				<div class="form-group">
					<label for="exampleInputPassword4">Ad</label>
					<input type="text" asp-for="Name" class="form-control" placeholder="@Model.Name">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Soyad</label>
					<input type="text" asp-for="Surname" class="form-control" placeholder="@Model.Surname">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Mail</label>
					<input type="email" asp-for="Mail" class="form-control" placeholder="@Model.Mail">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Şehir</label>
					<input type="text" asp-for="City" class="form-control" placeholder="@Model.City">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Ülke</label>
					<input type="text" asp-for="Country" class="form-control" placeholder="@Model.Country">
				</div>
				
				<button type="submit" class="btn btn-primary mr-2">Güncelle</button>
				<button class="btn btn-light">İptal</button>
			</form>
		</div>
	</div>
</div>

