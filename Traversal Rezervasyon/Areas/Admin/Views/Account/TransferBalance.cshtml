@model AccountUpdateDTO
@{
    ViewData["Title"] = "TransferBalance";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Para Transferi</h4>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="exampleInputPassword4">Gönderen</label>
                    <input type="text" asp-for="ReceiveID" class="form-control" placeholder="Gönderen">
                  
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Alıcı</label>
                    <input type="text" asp-for="SenderID" class="form-control" placeholder="Alıcı">
                
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword4">Gönderilecek Ücret</label>
                    <input type="text" asp-for="Balance" class="form-control" placeholder="Gönderilecek Ücret">

                </div>

                <br />
                <button  type="submit" class="btn btn-primary mr-2">Gönder</button>
                <button class="btn btn-light">İptal</button>
            </form>

        </div>
    </div>
</div>