@model GetAddDestinationQueryCommand
@{
    ViewData["Title"] = "AddDestional";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tur Ekleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">

                  
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şehir</label>
                    <input type="text" asp-for="City" class="form-control" placeholder="Şehir">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kaç Gün</label>
                    <input type="text" asp-for="DayNight" class="form-control" placeholder="Kaç Gün">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Ücret</label>
                    <input type="text" asp-for="Price" class="form-control" placeholder="Ücret">
                </div>
            
                <div class="form-group">
                    <label for="exampleInputName1">Kapasite</label>
                    <input type="text" asp-for="Capacity" class="form-control" placeholder="Kapasite">
                </div>


                <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>

