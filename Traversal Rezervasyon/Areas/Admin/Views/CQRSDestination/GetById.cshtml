@model GetDestinationQueryResults
@{
    ViewData["Title"] = "GetById";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Tur Ekleme Sayfası</h4>
			<form class="forms-sample" method="post">
				<input type="hidden" class="form-control" asp-for="@Model.DestinationID" placeholder="@Model.DestinationID" />
				<div class="form-group">
					<label for="exampleInputPassword4">Şehir</label>
					<input type="text" asp-for="City" class="form-control" placeholder="@Model.City">
				</div>
				
				<div class="form-group">
					<label for="exampleInputPassword4">Kapasite</label>
					<input type="text" asp-for="Capacity" class="form-control" placeholder="@Model.Capacity">
				</div>

				<div class="form-group">
					<label for="exampleInputPassword4">Süre</label>
					<input type="text" asp-for="DayNight" class="form-control" placeholder="@Model.DayNight">
				</div>


				<button type="submit" class="btn btn-primary mr-2">Güncelle</button>
				<button class="btn btn-light">İptal</button>
			</form>
		</div>
	</div>
</div>


