@using EntityLayer.Concrete

@model List<AppUser>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminUILayout.cshtml";
	int count = 0;
}

<div class="card">
	<h5 class="card-header">Misafir Kullanıcı</h5>
	<div class="card-body">
		<div class="table-responsive text-nowrap">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>Ad</th>
						<th>Soyad</th>
						<th>Kullanıcı Ad</th>
						<th>E-Mail</th>
						<th>Telefon Numarası</th>
						<th>Sil</th>
						<th>Güncelle</th>
						<th>Geçmiş Turlar</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td>@count</td>
							<td>@item.Name</td>
							<td>@item.Surname</td>
							<td>@item.UserName</td>
							<td>@item.Email</td>
							<td>@item.PhoneNumber</td>
							<td><a href="/Admin/AppUser/UserDelete/@item.Id" class="btn btn-outline-danger"onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a></td>
							<td><a href="/Admin/AppUser/UpdateUser/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
							<td><a href="/Admin/Reservation/LastReservations/@item.Id" class="btn btn-outline-info">Geçmiş Turlar</a></td>
						</tr>
					}


				</tbody>
			</table>
			<br />
			<a href="/Admin/AppUser/UserAdd" class="btn btn-outline-success">Kullanıcı Ekle</a>
			<a href="/Excel/ExcelGuest" class="btn btn-outline-warning">EXCEL Dosyasını İndir</a>
			<a href="/Pdf/PdfUser" class="btn btn-outline-danger">PDF Dosyasını İndir</a>
		</div>
	</div>
</div>



