@using EntityLayer.Concrete

@model List<AppUser>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminUILayout.cshtml";
	int count = 0;
}

<div class="card">
	<h5 class="card-header">Misafir Kullanıcı</h5>
	<div class="card-body">
		<div class="table-responsive text-nowrap">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>Ad</th>
						<th>Soyad</th>
						<th>Kullanıcı Ad</th>
						<th>E-Mail</th>
						<th>Telefon Numarası</th>
						<th>Sil</th>
						<th>Yorumlar</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td>@count</td>
							<td>@item.Name</td>
							<td>@item.Surname</td>
							<td>@item.UserName</td>
							<td>@item.Email</td>
							<td>@item.PhoneNumber</td>
							<td><a href="/Admin/Destination/DeleteDestination/@item.Id" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/Destination/UpdateDestination/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
						</tr>
					}


				</tbody>
			</table>
			<a href="/Admin/Destination/AddDestination" class="btn btn-success">Kullanıcı Ekle</a>
		</div>
	</div>
</div>
