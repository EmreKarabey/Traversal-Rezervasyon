@model Traversal_Rezervasyon.Areas.Admin.Models.GuestUserAdd
@{
    ViewData["Title"] = "UserAdd";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Misafir Kullanıcı Ekleme Sayfası</h4>
			<form class="forms-sample" method="post" autocomplete="off">

				<div class="form-group">
					<label for="exampleInputPassword4">İsim</label>
					<input type="text" asp-for="Name" class="form-control" placeholder="İsim">
					<span class="text-danger" asp-validation-for="@Model.Name"></span>
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Soyisim</label>
					<input type="text" asp-for="Surname" class="form-control" placeholder="Soyisim">
					<span class="text-danger" asp-validation-for="@Model.Surname"></span>
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Kullanıcı Adı</label>
					<input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı">
					<span class="text-danger" asp-validation-for="@Model.UserName"></span>
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">E-Mail</label>
					<input type="email" asp-for="Email" class="form-control" placeholder="E-Mail">
					<span class="text-danger" asp-validation-for="@Model.Email"></span>
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Şifre</label>
					<input type="password" asp-for="Password" class="form-control" placeholder="Şifre">
					<span class="text-danger" asp-validation-for="@Model.Password"></span>
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Şifre Tekrarı</label>
					<input type="password" asp-for="ConfirmPasword" class="form-control" placeholder="Şifre Tekrarı">
					<span class="text-danger" asp-validation-for="@Model.ConfirmPasword"></span>
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Telefon Numarsı</label>
					<input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Telefon Numarsı">
					<span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Cinsiyet</label>
					<select type="text" asp-for="Gender" class="form-control">
						<option value="">-----Lütfen Cinsiyet Seçiniz-----</option>
						<option value="0">Kız</option>
						<option value="1">Erkek</option>
						</select>
					<span class="text-danger" asp-validation-for="Gender"></span>
				</div>
				<div class="text-danger" asp-validation-summary="ModelOnly" ></div>
		
				<button type="submit" class="btn btn-primary mr-2">Ekle</button>
				<button class="btn btn-light">İptal</button>
			</form>
		</div>
	</div>
</div>

