@model List<EntityLayer.Concrete.AppUser>
@{
	ViewData["Title"] = "UserList";
	Layout = "~/Views/Shared/_AdminUILayout.cshtml";
	int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Tur Rehberleri Listesi</h4>
		
				<div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>#</th>
								<th>Ad</th>
								<th>Rol Ata</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>@item.Name @item.Surname</td>
									<td><a href="/Admin/Role/AssignedUser/@item.Id" class="btn btn-warning">Rol Ata</a></td>
								
								</tr>
							}
						</tbody>
					</table>
				</div>

			
			<br />
		</div>
	</div>
</div>

