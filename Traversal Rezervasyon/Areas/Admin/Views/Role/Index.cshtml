@using EntityLayer.Concrete
@model List<AppRole>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminUILayout.cshtml";
	int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Tur Rehberleri Listesi</h4>
			@if (Model.Count > 0)
					{
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Rol Adı</th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>
					</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>@item.Name</td>
									<td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-warning">Sil</a></td>
									<td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-info">Düzenle</a></td>
								</tr>
							}
						</tbody>
				</table>
				</div>
				<a href="/Admin/Role/AddRole" class="btn btn-outline-info">Yeni Rol Ekle</a>
			}
			{
				<div class="alert alert-danger">
					<span >Her Hangi Bir Role Bulunamadı </span>
				</div>
				<br />
				<a href="/Admin/Role/AddRole" class="btn btn-outline-info">Yeni Rol Ekle</a>
			}
			<br />
		</div>
	</div>
</div>
