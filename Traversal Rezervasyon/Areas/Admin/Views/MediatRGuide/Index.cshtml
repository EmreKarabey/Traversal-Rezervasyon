@model List< GetAllGuideQueryResults>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminUILayout.cshtml";
	int count = 0;
}

<div class="card">
	<h5 class="card-header"> MediatR Tur Rehberleri Listesi</h5>
	<div class="card-body">
		<div class="table-responsive text-nowrap">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>İsim</th>
						<th>Açıklama</th>
						<th>Sil</th>
						<th>Güncelle</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td>@count</td>
							<td>@item.Name</td>
							<td>@item.Description</td>
							
							<td><a href="/Admin/Destination/DeleteDestination/@item" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/MediatRGuide/GetById/@item.GuideID" class="btn btn-outline-warning">Güncelle</a></td>
						</tr>
					}


				</tbody>
			</table>
			<br />
			<a href="/Admin/Destination/AddDestination" class="btn btn-warning">Tur Ekle</a>
			<a href="/Excel/ExcelDestination" class="btn btn-outline-success">Excel Dosyasını İndir</a>
			<a href="/Pdf/PdfDestination" class="btn btn-outline-danger">PDF Dosyasını İndir</a>
		</div>
	</div>
</div>