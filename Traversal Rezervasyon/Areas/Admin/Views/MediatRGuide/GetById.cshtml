@model GetByIdGuideQueryResults
@{
    ViewData["Title"] = "GetById";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Tur Rehberi Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">

                    <input type="hidden" asp-for="@Model.GuideID" class="form-control" placeholder="@Model.GuideID">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Ad-Soyad</label>
                    <input type="text" asp-for="@Model.Name" class="form-control" placeholder="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama</label>
                    <input type="text" asp-for="@Model.Description" class="form-control" placeholder="@Model.Description">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>

