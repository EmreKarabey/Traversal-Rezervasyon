@using EntityLayer.Concrete
@model List<Comment>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminUILayout.cshtml";
	int count = 0;
}


<div class="card">
	<h5 class="card-header">Yorumlar Listesi</h5>
	<div class="card-body">
		<div class="table-responsive text-nowrap">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>#</th>
						<th>Kullanıcı</th>
						<th>Şehir</th>
						<th>Tarih</th>
						<th>Yorum</th>
						<th>Sil</th>
			
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td>@count</td>
							<td>@item.CommentUser</td>
							<td>@item.Destination.City</td>
							<td>@item.CommentDate.ToShortDateString()</td>
							<td>@item.CommentContent</td>
							<td><a href="/Admin/Comment/CommentDelete/@item.CommentID" class="btn btn-outline-danger">Sil</a></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
