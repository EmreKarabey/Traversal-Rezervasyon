
@model EntityLayer.Concrete.Destination

@{
	ViewData["Title"] = "AddDestination";
	Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Tur Ekleme Sayfası</h4>
			<form class="forms-sample" method="post">
			
				<div class="form-group">
					<label for="exampleInputPassword4">Şehir</label>
					<input type="text" asp-for="City" class="form-control" placeholder="Şehir">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Kaç Gün</label>
					<input type="text" asp-for="DayNight" class="form-control" placeholder="Kaç Gün">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Ücret</label>
					<input type="text" asp-for="Price" class="form-control" placeholder="Ücret">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword4">Resim</label>
					<input type="text" asp-for="Image" class="form-control" placeholder="Resim">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Açıklama</label>
					<input type="text" asp-for="Description" class="form-control" placeholder="Açıklama">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Kapasite</label>
					<input type="text" asp-for="Capacity" class="form-control" placeholder="Kapasite">
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Kapak Resmi</label>
					<input type="text" asp-for="CoverImage" class="form-control" placeholder="Kapak Resmi">
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Resim 2</label>
					<input type="text" asp-for="Image2" class="form-control" placeholder="Resim 2">
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Ana Başlık</label>
					<input type="text" asp-for="MainTitle" class="form-control" placeholder="Kapak Resmi">
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Başlık 1</label>
					<input type="text" asp-for="Title1" class="form-control" placeholder="Başlık 1">
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Başlık 2</label>
					<input type="text" asp-for="Title2" class="form-control" placeholder="Başlık 2">
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Detay 1</label>
					<input type="text" asp-for="Details1" class="form-control" placeholder="Detay 1">
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Detay 2</label>
					<input type="text" asp-for="Details2" class="form-control" placeholder="Detay 2s">
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Detay 3</label>
					<input type="text" asp-for="Details3" class="form-control" placeholder="Alıntı">
				</div>

				<div class="form-group">
					<label for="exampleInputName1">Alıntı</label>
					<input type="text" asp-for="Quotation" class="form-control" placeholder="Alıntı">
				</div>


				<button type="submit" class="btn btn-primary mr-2">Ekle</button>
				<button class="btn btn-light">İptal</button>
			</form>
		</div>
	</div>
</div>
