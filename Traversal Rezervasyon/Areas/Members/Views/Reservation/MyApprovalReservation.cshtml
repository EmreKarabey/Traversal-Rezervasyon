@using EntityLayer.Concrete

@model List<Reservation>
@{
    ViewData["Title"] = "MyApprovalReservation";
    Layout = "~/Views/Shared/_MemberNewLayout.cshtml";

    int count = 0;
}


<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">Onay Bekleyen Rezervasyon Tablsou</h3>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Onay Bekleyen Rezervasyonlar</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    <li><a data-action="Kapat"><i class="ft-x"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">

                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Ad-Soyad</th>
                                                <th>Kişi Sayısı</th>
                                                <th>Rezervasyon Yeri</th>
                                                <th>Rezervasyon Tarihi</th>
                                                <th>Açıklama</th>
                                                <th>Durum</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model)
                                            {
                                                count++;
                                                <tr>
                                                    <td> @count </td>
                                                    <td> @item.AppUser.Name @item.AppUser.Surname </td>
                                                    <td> @item.PersonCount </td>
                                                    <td> @item.Destination.City </td>
                                                    <td> @item.ReservationDateTime.ToShortDateString() </td>
                                                    <td> @item.Description </td>
                                                    <td> <label class="text-danger">@item.Status</label></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



